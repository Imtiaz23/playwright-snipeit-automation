{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run SnipeIT Tests",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"PlaywrightTests.csproj",
				"--logger",
				"trx;LogFileName=TestResults.trx",
				"--logger",
				"html;LogFileName=TestResults.html",
				"--verbosity",
				"normal"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			]
		}
	]
}